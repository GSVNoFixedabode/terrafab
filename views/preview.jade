            $('.progress p').hide();
            var item = 0
            var length = $('.progress p').length
            $( $('.progress p')[item] ).show(); 
            var interval = setInterval( function() { 
              $('.progress p').hide();
              if(item<length) { 
                $( $('.progress p')[item] ).show(); 
                item++; 
                console.log(item, length);
                if( item == length) {
                  $('.progress').remove();
                  $('.downloadButton').removeClass('disabled');
                  clearInterval(interval);
                }
              } 
            }, 1500);
