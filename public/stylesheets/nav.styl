mobileMaxSize = 500px
baseLineHeight = 20px
zindexFixedNavbar = 1000
navbarHeight = 40px
color_bengler_red = #cc0000

.navbar
  background-color: transparent
  position: fixed
  z-index: zindexFixedNavbar
  top: 0
  left: 0
  width: 100%
  height: navbarHeight
  margin: 0
  padding: 0
  .navbar-inner
    margin-top: 10px
    height: navbarHeight
    margin-left: 40px
    width: 300px
    height: 45px
    background-color: rgba(#fff, .5)
    //margin: 0 auto
    //position: relative
  a.aboutTheProjectLink
    text-transform: uppercase
    line-height: 45px
    text-decoration: none
    font-size 12px
    color: #333
    margin-left: 0
    &:hover
      color: #000
  div.brand
    margin-left: 0px
    a
      display: block
      float: left
      height: (baseLineHeight * 2)
      background-image: url("http://bengler.no/assets/bengler_logo.svg")
      background-size: auto 17px
      background-position: 0px 13px
      background-repeat: no-repeat
      margin-left: 16px
      text-indent: -9999px
      width: 120px
      @media screen and (max-width: mobileMaxSize)
        background-size: auto 13px
        background-position: 0px 15px
    @media screen and (max-width: mobileMaxSize)
      margin-left: 20px
      a
        margin-left: 0

  .nav-collapse
    position: absolute
    left: 160px
    line-height: navbarHeight
    @media screen and (max-width: mobileMaxSize)
      left: 100px
    ul.nav
      margin: 0
      padding: 0
      li
        display: block
        float: left
        a
          display: block
          line-height: baseLineHeight
          font-weight: 400
          color: #000
          margin-right: 10px
          letter-spacing: -0.02em
          font-size: 16px
          margin-top: (baseLineHeight / 4)
          padding: (baseLineHeight / 4) 10px
          text-decoration: none
          &:hover
            background-color: #000
            color: #fff
          &:active, &.active
            background-color: color_bengler_red
    @media screen and (max-width: mobileMaxSize)
      left: 100px
      ul.nav
        li
          a
            margin-top: (baseLineHeight / 4)
            padding: (baseLineHeight / 4) 4px
            font-size: 11px