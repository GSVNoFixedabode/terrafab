  //   background-size: auto 100%
  .container
    margin-top: 90px
    clear: both
    .col1, .col2
      position: relative
      float: left
      margin-bottom: 200px
    .col1
      width: 600px
    .col2
      max-width: 400px
      padding-right: 50px
  // type
  p
    font-weight: 300
    font-size: 16px
    line-height: 20px
  .caption
    font-style: italic
    font-size: 14px
    color: #999
    line-height: 18px
    margin-top: 5px
  .shapewaysInfo
    margin-top: 48px
    .shapewaysLogo
      height: 24px
  .downloadText
    p
      padding: 0 90px
      line-height: 24px

  img.modelExample
    width: 400px
    height: auto