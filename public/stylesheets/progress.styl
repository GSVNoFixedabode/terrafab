@keyframes animate-stripes 
  0%
    background-position: 0 0
  100%
    background-position: 60px 0

.progress-bar
  background-color: #fff
  height: 25px
  padding: 5px
  width: 400px
  margin: 40px 0
  border: 2px solid #333
  span
    background-color: buttonColor
    display: inline-block
    height: 100%
    transition: width .4s ease-in-out
