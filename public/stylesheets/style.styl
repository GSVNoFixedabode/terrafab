buttonColor = #ffb400
@import url(http://fonts.googleapis.com/css?family=Lato:300,400,700,900)
@import 'leaflet.css'
@import 'progress'
@import 'nav'
@import 'interface'
@import 'previewPage'
@import 'cartPage'

body
  height: 100%
  width: 100%
  padding: 0
  font: 14px "Lato"
  //, Helvetica, Arial, sans-serif
  overflow: hidden
  user-select: none
  a
    color: #00B7FF
  .waitForLoad
    display: none
  #loader
    margin-top: 200px
    text-align: center
  #modelSpinner
    display: none
    opacity: .5
    position: fixed
    right: 360px
    bottom: 40px
    z-index: 5001
    height: 66px
    width: 66px
    background-color: #fff
    img
      margin-left: 24px
      margin-top: 24px
      width: 20px
      height: 20px
  #tileSpinner
    display: none
    opacity: .5
    position: fixed
    top: 14px
    left: 300px
    z-index: 5002
    height: 32px
    width: 32px
    padding: 10px
    img
      width: 16px
      height: 16px

#bubble
  position: fixed
  height: 100%
  width: 100%
  top: 0
  left: 0
  background-color: rgba(#333, .8)
  z-index: 10000
  #bubbleContent
    position: absolute
    top: 70px
    left: 40px
    height: auto
    width: 700px
    z-index: 5000
    background-color: rgba(#fff, 0.9)
    padding: 20px
    padding-bottom: 10px
  .close
    display: none
    position: absolute
    top: 10px
    right: 10px
    cursor: pointer
    opacity: 0.5
    &:hover
      opacity: 1
    svg
      zoom: 0.5
  .credits
    padding-top: 10px
    clear: both
    p
      text-align: center
      font-size: 12px
      color: #999

  .warnings
    > div
      display: none
      &.active
        display: block
    p
      border: 1px solid #c00
      background-color: #c03f00
      color: #fff
      padding: 10px 15px
    .shouldWork
      p
        border: 1px solid #ccc
        background-color: #dedede
        color: #333

  h1
    margin-top: 0px
    margin-bottom: 6px
    font-weight: 900
    text-transform: uppercase
    font-size: 36px
    margin-bottom: 20px
  p
    margin-top: 0
    font-size: 14px
    line-height: 24px
    padding-right: 40px
    color: #444
  .illustration
    display: block
    width: 50%
    height: auto
    margin-right: 15px
    margin-bottom: 12px
    float: left

  div.block
    width: 47%
    float: left
    text-align: center
    > a.bigOrangeButton
      display: inline-block
      width: 200px
      margin-top: 10px
    p, ol
      text-align: left
    ol
      line-height: 20px
      margin-left: 0
      padding-left: 30px
      li
        margin-left: 0
      color: #444

#map
  position: absolute
  top: 0px
  bottom: 0
  left: 0
  right: 0
  .leaflet-control-container
    .leaflet-left
      top: 60px !important
      margin-left: 50px !important
  .leaflet-marker-pane
    .leaflet-div-icon
      background-color: rgba(#666, 0.9)
      border: 1px solid #fff
      border-radius: none
    .corner-nw
      cursor: nw-resize
    .corner-sw
      cursor: sw-resize
    .corner-se
      cursor: se-resize
    .corner-ne
      cursor: ne-resize
  .moveable
    cursor: move
    opacity: 0
    border-radius: 30px

#indexPage canvas#terrain
  z-index: 1
  position: fixed
  pointer-events: none
  right: 0
  bottom: 0
  width: 70%
  max-width: 800px
  height: auto

a.bigOrangeButton
  display: block
  background-color: buttonColor
  font-weight: 900
  color: #000
  text-transform: uppercase
  line-height: 38px
  height: 38px
  padding: 0 14px
  font-size: 18px
  cursor: pointer

a:hover.bigOrangeButton
  background-color: black
  color: white

@media screen and (max-width: 720px)
  body
    width: 100%
    overflow-x: hidden
    margin: 0
    padding: 0
    .navbar .navbar-inner
      margin-left: 10px !important
    #loader, #modelSpinner, #tileSpinner
      display: none !important
    #bubble
      position: static
      width: 100%
      margin: 0
      overflow: hidden
      height: auto
      background-color: #fff
      padding: 0
      #bubbleContent
        box-sizing: border-box
        max-width: 100%
        margin: 0
        position: static
        padding: 0
        padding: 10px
        margin-top: 60px
        margin-bottom: 100px
        img, iframe, video, .video.illustration
          width: 100%
          height: auto !important
        @media screen and (max-width: 320px)
          iframe
            height: 168px !important

        .col1, .col2, .block, img
          width: 100%
          clear: both
          float: none
          display: none

    #map
      display: none !important
    canvas
      display: none !important
    #interface
      display: none !important
    .warnings
      > div
        display: none !important
      .cantWorkMobile
        display: block !important
